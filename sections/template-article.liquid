<article class="py-8">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'article_title' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
                        <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
                    </div>
                </div>
            {% when 'article_author' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        {% if section.settings.enable_author %}
                            <small>{{ article.author }}</small>
                        {% endif %}
                    </div>
                </div>
            {% when 'article_published_date' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        {% if section.settings.enable_published_date %}
                            <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'on_date' }}</time>
                        {% endif %}
                    </div>
                </div>
            {% when 'featured_image' %}
                <div class="max-w-7xl rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
                    {% if article.image != blank %}
                       

                        <img 
                        src="{{ article.image | image_url: width: 480, height: 480 }}" 
                        width='500px'
                        height='500px' 
                        alt="{{ article.image.alt }}" 
                        loading="lazy"
                        class='max-w-[500px] mx-auto'
                        />
                    {% else %}
                        {% assign placeholder_image = 'lifestyle-1' %}
                        {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
                    {% endif %}
                </div>
            {% when 'article_content' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-4xl">
                        {{ article.content }}
                    </div>
                </div>
        {% else %}
        {% endcase %}
    {% endfor %}
</article>

{% if blog.comments_enabled? %}
    <div id="comments" class="my-8">
        {% if article.comments_count > 0 %}
            <div class="flex-1 items-center justify-center mx-auto max-w-4xl px-4">
                <h1 class="text-lg mb-4 font-medium">See what people are saying</h1>

                {% paginate article.comments by 5 %}
                    {% for comment in article.comments %}
                        <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
                            <span class="comment-author">{{ comment.author }}</span>
                            <span class="text-xs text-gray-400">{{ comment.created_at | date: format: 'default' }}</span>
                            <p class="text-sm">{{ comment.content }}</p>
                        </div>
                    {% endfor %}
                    {% if paginate.pages > 1 %}
                        {{ paginate | default_pagination }}
                    {% endif %}
                {% endpaginate %}
            </div>
        {% else %}
            <p class='w-full mx-auto text-center'>There are no comments for this article.</p>
        {% endif %}
    </div>

    <div id="comment_form" class="mb-8">
        {% form 'new_comment', article %}
            <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
                {% if form.errors %}
                    <div class="border p-5">
                        <div class="flex items-center my-3">
                            <div class="text-red-500">
                                {% render 'icon-failed' %}
                            </div>
                            <div class="text-sm font-medium ml-3">
                                Oh no! Your comment was not posted.
                            </div>
                        </div>
                        <ul class="list-decimal ml-7">
                            {% for error in form.errors %}
                                <li>{{ form.errors.messages[error] }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% elsif form.posted_successfully? %}
                    <div class="flex items-center p-5">
                        <div class="text-green-500">
                            {% render 'icon-success' %}
                        </div>
                        <div class="text-sm font-medium ml-3">
                            Comment posted successfully!
                        </div>
                    </div>
                {% endif %}

                <div class="px-1 md:flex mb-3">
                    <div class="px-3 md:w-1/2">
                        <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs">Name</label>
                        <input 
                            type="text" 
                            name="comment[author]" 
                            id="comment_author" 
                            class="w-full border py-3 px-4 focus:outline-none" 
                            placeholder="Jane Doe" 
                            required 
                            aria-label="Author name"
                        />
                    </div>
                    <div class="px-3 md:w-1/2">
                        <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs">Email</label>
                        <input 
                            type="email" 
                            name="comment[email]" 
                            id="comment_email" 
                            class="w-full border py-3 px-4 focus:outline-none" 
                            placeholder="jane@doe.com" 
                            required 
                            aria-label="Email address"
                        />
                    </div>
                </div>

                <div class="px-1 mb-3">
                    <label for="comment_content" class="text-gray-700 font-medium uppercase text-xs">Comment</label>
                    <textarea 
                        name="comment[body]" 
                        id="comment_content" 
                        class="w-full border resize-none py-2 px-3 focus:outline-none h-20" 
                        required 
                        aria-label="Comment content"
                    ></textarea>
                </div>

                <div class="px-1">
                    <input 
                        type="submit" 
                        class="w-full cursor-pointer px-4 py-2 border text-white bg-blue-900 hover:bg-blue-500" 
                        value="Post Comment"
                    />
                </div>
            </div>
        {% endform %}
    </div>
{% endif %}


{% schema %}
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "default": true,
            "label": "Display Author Name"
        },
        {
            "type": "checkbox",
            "id": "enable_published_date",
            "default": true,
            "label": "Display Published Date"
        }
    ],
    "blocks": [
        {
            "type": "article_title",
            "name": "Title",
            "limit": 1
        },
        {
            "type": "article_author",
            "name": "Author",
            "limit": 1
        },
        {
            "type": "article_published_date",
            "name": "Published Date",
            "limit": 1
        },
        {
            "type": "featured_image",
            "name": "Thumbnail",
            "limit": 1
        },
        {
            "type": "article_content",
            "name": "Content",
            "limit": 1
        }
    ]
}
{% endschema %}
